@model CRUD_Oscar.Models.Libro
@{
    ViewData["Title"] = "Crear";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post" asp-action="Agregar">
    <div class="border p-3">
        <div class="form-group row">
			<h2 class="text-info pl-3">Agregar Libro</h2>
        </div>

        <div class="container">
            <div class="row">
                <div class="col-md-6">
					<label asp-for="Titulo" class="form-label">Nombre Libro</label>
                    <input asp-for="Titulo" class="form-control"/>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <label asp-for="Autor" class="form-label">Nombre del Autor</label>
                    <input asp-for="Autor" class="form-control" />
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <label asp-for="Tema" class="form-label">Descripción</label>
                    <input asp-for="Tema" class="form-control" />
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <label asp-for="Editorial" class="form-label">Editorial</label>
                    <input asp-for="Editorial" class="form-control" />
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <label asp-for="AnioPublicacion" class="form-label">Año de Publicación</label>
                    <input asp-for="AnioPublicacion" class="form-control" />
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <label asp-for="Paginas" class="form-label">Número de Páginas</label>
                    <input asp-for="Paginas" class="form-control" />
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <label asp-for="Categoria" class="form-label">Categoría</label>
                    <input asp-for="Categoria" class="form-control" />
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <label asp-for="Material" class="form-label">Material</label>
                    <input asp-for="Material" class="form-control" />
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <label asp-for="Copias" class="form-label">Número de Copias</label>
                    <input asp-for="Copias" class="form-control" />
                </div>
            </div>

			<div class="d-grid gap-2 d-md-block">
				
					<button type="submit" class="btn btn-primary mt-3">Crear</button>
                    <a asp-controller="Libro" asp-action="Index" class="btn btn-success mt-3">Regresar</a>
			</div>	
        </div>
    </div>
</form>

